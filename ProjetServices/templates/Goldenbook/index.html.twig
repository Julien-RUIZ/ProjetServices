{% extends 'base.html.twig' %}

{% block title %}Hello ReadGoldenBookController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Livre d'Or</h1>
        <div class="after-title"></div>
        {% if form is defined %}
            <div class=" my-5">
                {{ form(form) }}
            </div>
        {% endif %}
        <article class="mt-5">
            <h2>Ce qu'ils pensent de nous</h2>
            <div class="GoldenBookCard ">
                {% for ActiveGoldenBook in ActiveGoldenBooks %}
                    <div {% if app.user == ActiveGoldenBook.user%}
                        class="card mb-5 GoldenBookPerso" style="width: 18rem;"
                    {% else %}
                        class="card mb-5" style="width: 18rem;"
                    {% endif %}>
                        <div class="card-body">
                            <p class="card-text">{{ ActiveGoldenBook.text}}</p>
                            <p class="card-username"><i>{{ ActiveGoldenBook.username }}</i></p>
                            <p class="card-date">{{ ActiveGoldenBook.date| date("m/d/Y") }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </article>
    </div>
{% endblock %}
